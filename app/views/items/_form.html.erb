<%= form_with url: path, method: method, local: true do |f| %>
  <%= f.label :name, "Name:" %>
  <%= f.text_field :name %><br>

  <%= f.label :description, "Description:" %>
  <%= f.text_area :description %>

  <%= f.label :unit_price, "Unit Price:" %>
  <%= f.number_field :unit_price %>

  <%= f.submit "#{button_text}" %>
<% end %>
